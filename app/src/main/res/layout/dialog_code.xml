<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="@drawable/dialog_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
    <ImageView
            android:id="@+id/dialog_colse"
            android:layout_margin="40px"
            android:layout_alignParentRight="true"
            android:src="@drawable/tip_close"
            android:layout_width="60px"
            android:layout_height="60px"/>
    
    <TextView
            android:id="@+id/dialog_code_hint"
            android:textSize="48px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="142px"
            android:textColor="#a5a5a5"
            android:text="支付宝/微信支付码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    
    <ImageView
            android:id="@+id/dialog_iv_code"
            android:layout_marginTop="60px"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/dialog_code_hint"
            android:layout_width="386px"
            android:layout_height="386px"/>
    
    <TextView
            android:id="@+id/dialog_tv_money"
            android:layout_marginTop="64px"
            android:textSize="84px"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/dialog_iv_code"
            android:layout_centerHorizontal="true"
            android:text="支付5000元"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    
    <TextView
            android:layout_marginTop="112px"
            android:textSize="@dimen/text_size_normal"
            android:layout_below="@+id/dialog_tv_money"
            android:layout_centerHorizontal="true"
            android:text="长按保存二维码至相册"
            android:layout_marginBottom="80px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</RelativeLayout>