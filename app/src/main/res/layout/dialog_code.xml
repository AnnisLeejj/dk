<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="@drawable/dialog_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
    <ImageView
            android:id="@+id/dialog_colse"
            android:layout_margin="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/tip_close"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    
    <TextView
            android:id="@+id/dialog_code_hint"
            android:textSize="24dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="71dp"
            android:textColor="#a5a5a5"
            android:text="支付宝/微信支付码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    
    <ImageView
            android:id="@+id/dialog_iv_code"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/dialog_code_hint"
            android:layout_width="193dp"
            android:layout_height="193dp"/>
    
    <TextView
            android:id="@+id/dialog_tv_money"
            android:layout_marginTop="32dp"
            android:textSize="41dp"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/dialog_iv_code"
            android:layout_centerHorizontal="true"
            android:text="支付5000元"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    
    <TextView
            android:layout_marginTop="56dp"
            android:textSize="@dimen/text_size_normal"
            android:layout_below="@+id/dialog_tv_money"
            android:layout_centerHorizontal="true"
            android:text="长按保存二维码至相册"
            android:layout_marginBottom="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</RelativeLayout>