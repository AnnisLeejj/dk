<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.annis.dk.ui.mine.progress.backed.LoanBackActivity">
    
    <ImageView
            android:id="@+id/back_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="79dp"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/statte_ok_icon"
            android:layout_width="130dp"
            android:layout_height="130dp"/>
    
    <TextView
            android:id="@+id/teasdxc"
            app:layout_constraintTop_toBottomOf="@+id/back_img"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="50dp"
            android:textSize="32dp"
            android:textColor="@color/text_color_black"
            android:text="还款成功!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    
    <TextView
            android:id="@+id/asdfadsfwe"
            app:layout_constraintTop_toBottomOf="@+id/teasdxc"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="13dp"
            android:textSize="25dp"
            android:textColor="@color/text_color_gray"
            android:text="当前无欠款"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    
    <Button
            android:id="@+id/act_bt_login"
            android:textColor="@color/white"
            android:text="申请贷款"
            android:layout_marginTop="54dp"
            app:layout_constraintTop_toBottomOf="@+id/asdfadsfwe"
            android:layout_marginLeft="@dimen/bt_margin_window_side"
            android:layout_marginRight="@dimen/bt_margin_window_side"
            android:background="@drawable/sp_bt_bg_primary_c"
            android:textSize="@dimen/bt_text_size"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_h"/>
</androidx.constraintlayout.widget.ConstraintLayout>
