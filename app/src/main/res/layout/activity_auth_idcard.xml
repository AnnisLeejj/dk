<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.annis.dk.ui.authentication.idCard.AuthIdcardActivity">
    
    
    <RelativeLayout
            android:id="@+id/idcard_1_container"
            android:layout_marginTop="120px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="474px"
            android:layout_height="300px">
        
        <ImageView
                android:id="@+id/idcard_1_img"
                android:src="@drawable/shenfen1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </RelativeLayout>
    
    <RelativeLayout
            android:id="@+id/idcard_2_container"
            android:layout_marginTop="120px"
            app:layout_constraintTop_toBottomOf="@+id/idcard_1_container"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="474px"
            android:layout_height="300px">
        
        <ImageView
                android:id="@+id/idcard_2_img"
                android:src="@drawable/shenfen2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </RelativeLayout>
    
    <RelativeLayout
            android:id="@+id/idcard_3_container"
            android:layout_marginTop="120px"
            app:layout_constraintTop_toBottomOf="@+id/idcard_2_container"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="474px"
            android:layout_height="300px">
        
        <ImageView
                android:id="@+id/idcard_3_img"
                android:src="@drawable/shenfen3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </RelativeLayout>
    
    <Button
            android:id="@+id/act_bt_login"
            android:textColor="@color/white"
            android:text="提 交"
            android:layout_marginTop="187px"
            app:layout_constraintTop_toBottomOf="@+id/idcard_3_container"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:background="@drawable/sp_bt_bg_primary_c"
            android:textSize="@dimen/bt_text_size"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_h"/>
</androidx.constraintlayout.widget.ConstraintLayout>
