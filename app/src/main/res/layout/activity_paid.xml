<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.annis.dk.ui.mine.progress.PaidActivity">
    
    <ImageView
            android:id="@+id/act_paid_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="@dimen/bt_margin_window_bottom"
            android:src="@drawable/loan_handle_success"
            android:layout_width="86dp"
            android:layout_height="86dp"/>
    
    <TextView
            android:id="@+id/act_paid_text"
            android:textSize="@dimen/et_text_size"
            android:textColor="#00c30e"
            android:layout_marginTop="15dp"
            android:lineSpacingExtra="8dp"
            app:layout_constraintTop_toBottomOf="@+id/act_paid_img"
            android:text="提交成功!\n等待客服人员确认您的支付信息"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    
    <TextView
            android:layout_marginLeft="@dimen/margin_window"
            android:layout_marginRight="@dimen/margin_window"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/text_size_normal"
            app:layout_constraintTop_toBottomOf="@+id/act_paid_text"
            android:text="红鲤鱼在收到您的会员费用以后最快30分钟最晚48小时以内放款到签约银行卡"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>
