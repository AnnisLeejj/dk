<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.login.LoginActivity">
    
    <ImageView
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="92dp"
            android:layout_width="125dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/logo"
            android:layout_height="180dp"/>
    
    <EditText
            android:id="@+id/act_et_tel"
            android:lines="1"
            android:inputType="phone"
            app:layout_constraintBottom_toTopOf="@+id/act_tel_line"
            android:textColorHint="@color/et_hint_color"
            android:layout_width="match_parent"
            android:background="@null"
            android:layout_marginLeft="28dp"
            android:maxLength="15"
            android:hint="登录手机号"
            android:textSize="@dimen/et_text_size"
            android:layout_height="@dimen/item_layout_h"/>
    
    <View
            android:id="@+id/act_tel_line"
            app:layout_constraintBottom_toTopOf="@+id/act_et_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="#d7d7d7"/>
    
    <EditText
            android:id="@+id/act_et_code"
            app:layout_constraintBottom_toTopOf="@+id/act_code_line"
            android:textColorHint="@color/et_hint_color"
            android:layout_width="match_parent"
            android:background="@null"
            android:lines="1"
            android:inputType="number"
            android:layout_marginLeft="28dp"
            android:maxLength="6"
            android:hint="输入手机验证码"
            android:textSize="@dimen/et_text_size"
            android:layout_height="@dimen/item_layout_h"/>
    
    <Button
            android:id="@+id/act_bt_getcode"
            android:layout_width="140dp"
            android:layout_height="54dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginRight="32dp"
            android:background="@drawable/sp_bt_get_code"
            app:layout_constraintRight_toRightOf="parent"
            android:text="发送验证码"
            app:layout_constraintTop_toTopOf="@+id/act_et_code"
            app:layout_constraintBottom_toBottomOf="@+id/act_et_code"
            android:textSize="@dimen/et_text_size"/>
    
    <View
            android:id="@+id/act_code_line"
            app:layout_constraintBottom_toTopOf="@+id/act_bt_login"
            android:layout_marginBottom="44dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="#d7d7d7"/>
    
    <Button
            android:id="@+id/act_bt_login"
            android:textColor="@color/white"
            android:text="登 录"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="255dp"
            android:layout_marginLeft="@dimen/bt_margin_window_side"
            android:layout_marginRight="@dimen/bt_margin_window_side"
            android:background="@drawable/sp_bt_bg_primary_c"
            android:textSize="@dimen/bt_text_size"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_h"/>
    
    <TextView
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="@dimen/text_size_normal"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="西安前风科技电子有限公司"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <!--安前风科技电子有限公司-->
    <!--深圳市鼎盛世网络科技有限公司-->
</androidx.constraintlayout.widget.ConstraintLayout>