<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="@drawable/dialog_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
    <TextView
            android:id="@+id/dialog_noti_title"
            android:layout_marginTop="44dp"
            android:layout_centerHorizontal="true"
            android:text="提示"
            android:textColor="@color/black"
            android:textSize="@dimen/title_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    
    <TextView
            android:id="@+id/dialog_noti_tvMessage"
            android:layout_marginTop="28dp"
            android:layout_below="@+id/dialog_noti_title"
            android:layout_centerHorizontal="true"
            android:text="提示"
            android:textColor="@color/bar_grey"
            android:textSize="@dimen/text_size_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    
    <Button
            android:id="@+id/dialog_nitif_ok"
            android:text="确定"
            android:textColor="@color/white"
            android:background="@drawable/sp_bt_bg_primary_c"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/dialog_noti_tvMessage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_act_title_height"/>
</RelativeLayout>