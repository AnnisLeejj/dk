<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.annis.dk.ui.authentication.operator.AuthoperatorActivity">
    
    <EditText
            android:id="@+id/act_et_tel"
            android:lines="1"
            android:inputType="number"
            app:layout_constraintTop_toTopOf="parent"
            android:textColorHint="@color/et_hint_color"
            android:layout_width="match_parent"
            android:background="@null"
            android:paddingLeft="28dp"
            android:maxLength="12"
            android:hint="手机号码"
            android:textSize="@dimen/et_text_size"
            android:layout_height="@dimen/item_layout_h"/>
    
    <View
            android:id="@+id/act_tel_line"
            app:layout_constraintTop_toBottomOf="@+id/act_et_tel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="#d7d7d7"/>
    
    <EditText
            android:id="@+id/act_et_tel_psw"
            android:lines="1"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@+id/act_tel_line"
            android:textColorHint="@color/et_hint_color"
            android:layout_width="match_parent"
            android:background="@null"
            android:paddingLeft="28dp"
            android:hint="请输入服务密码"
            android:textSize="@dimen/et_text_size"
            android:maxLength="16"
            android:layout_height="@dimen/item_layout_h"/>
    
    <View
            android:id="@+id/act_et_tel_psw_line"
            app:layout_constraintTop_toBottomOf="@+id/act_et_tel_psw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="#d7d7d7"/>
    
    <EditText
            android:id="@+id/act_et_code"
            app:layout_constraintTop_toBottomOf="@+id/act_et_tel_psw_line"
            android:textColorHint="@color/et_hint_color"
            android:layout_width="match_parent"
            android:background="@null"
            android:lines="1"
            android:inputType="textEmailAddress"
            android:maxLength="6"
            android:paddingLeft="28dp"
            android:hint="请输入验证码"
            android:textSize="@dimen/et_text_size"
            android:layout_height="@dimen/item_layout_h"/>
    
    <Button
            android:id="@+id/act_bt_getcode"
            android:layout_width="140dp"
            android:layout_height="54dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginRight="32dp"
            android:background="@drawable/sp_bt_get_code"
            app:layout_constraintRight_toRightOf="parent"
            android:text="获取验证码"
            app:layout_constraintTop_toTopOf="@+id/act_et_code"
            app:layout_constraintBottom_toBottomOf="@+id/act_et_code"
            android:textSize="@dimen/et_text_size"/>
    
    <View
            android:id="@+id/act_code_line"
            app:layout_constraintTop_toBottomOf="@+id/act_et_code"
            android:layout_marginBottom="44dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="#d7d7d7"/>
    
    <CheckBox
            android:id="@+id/renzheng_operator_agree"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/act_code_line"
            android:layout_width="wrap_content"
            android:text="  同意"
            android:button="@drawable/cb_button"
            android:layout_marginLeft="25dp"
            android:paddingRight="11dp"
            android:textSize="19dp"
            android:textColor="#afafaf"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="19dp"/>
    
    <TextView
            app:layout_constraintTop_toTopOf="@+id/renzheng_operator_agree"
            app:layout_constraintBottom_toBottomOf="@+id/renzheng_operator_agree"
            app:layout_constraintLeft_toRightOf="@+id/renzheng_operator_agree"
            android:text="《用户使用协议》"
            app:layout_constraintTop_toBottomOf="@+id/act_code_line"
            android:textSize="19dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    
    <Button
            android:id="@+id/act_bt_login"
            android:textColor="@color/white"
            android:text="确 认"
            android:layout_marginTop="87dp"
            app:layout_constraintTop_toBottomOf="@+id/act_code_line"
            android:layout_marginBottom="255dp"
            android:layout_marginLeft="@dimen/bt_margin_window_side"
            android:layout_marginRight="@dimen/bt_margin_window_side"
            android:background="@drawable/sp_bt_bg_gray_c"
            android:textSize="@dimen/bt_text_size"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_h"/>
</androidx.constraintlayout.widget.ConstraintLayout>
