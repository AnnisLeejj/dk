<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.annis.dk.ui.authentication.operator.AuthoperatorActivity">
    
    <LinearLayout
            android:id="@+id/asdfaewfcv"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        
        <ImageView
                android:src="@drawable/anquan"
                android:layout_width="19dp"
                android:layout_height="23dp"/>
        
        <TextView
                android:text="GloblSign国际安全认证"
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    
    <LinearLayout
            android:id="@+id/asdfasdf"
            android:layout_marginTop="35dp"
            
            app:layout_constraintTop_toBottomOf="@+id/asdfaewfcv"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:background="@drawable/sp_bottom_border_05"
            android:layout_height="@dimen/item_layout_h">
        
        <ImageView
                android:src="@drawable/icon_mobel"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="13dp"
                android:layout_width="19dp"
                android:layout_height="29dp"/>
        
        <EditText
                android:id="@+id/act_et_tel"
                android:lines="1"
                android:inputType="number"
                app:layout_constraintTop_toTopOf="parent"
                android:textColorHint="@color/et_hint_color"
                android:layout_width="match_parent"
                android:background="@null"
                android:paddingLeft="28dp"
                android:maxLength="15"
                android:hint="请输入手机号码"
                android:textSize="@dimen/et_text_size"
                android:layout_height="match_parent"/>
    </LinearLayout>
    
    <LinearLayout
            android:id="@+id/asdasdfasdffasdf"
            app:layout_constraintTop_toBottomOf="@+id/asdfasdf"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:background="@drawable/sp_bottom_border_05"
            android:layout_height="@dimen/item_layout_h">
        
        <ImageView
                android:src="@drawable/icon_suo"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="13dp"
                android:layout_width="24dp"
                android:layout_height="27dp"/>
        
        <EditText
                android:id="@+id/act_et_tel_psw"
                android:lines="1"
                android:inputType="number"
                app:layout_constraintTop_toTopOf="parent"
                android:textColorHint="@color/et_hint_color"
                android:layout_width="match_parent"
                android:background="@null"
                android:paddingLeft="28dp"
                android:maxLength="16"
                android:hint="请输入服务密码"
                android:textSize="@dimen/et_text_size"
                android:layout_height="match_parent"/>
    </LinearLayout>
    
    <LinearLayout
            android:id="@+id/sdfsaed"
            app:layout_constraintTop_toBottomOf="@+id/asdasdfasdffasdf"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:background="@drawable/sp_bottom_border_05"
            android:layout_height="@dimen/item_layout_h">
        
        <ImageView
                android:src="@drawable/icon_id"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="13dp"
                android:layout_width="27dp"
                android:layout_height="20dp"/>
        
        <EditText
                android:id="@+id/act_et_idno"
                android:lines="1"
                android:inputType="textEmailAddress"
                app:layout_constraintTop_toTopOf="parent"
                android:textColorHint="@color/et_hint_color"
                android:layout_width="match_parent"
                android:background="@null"
                android:paddingLeft="28dp"
                android:maxLength="20"
                android:hint="本人身份证号码"
                android:textSize="@dimen/et_text_size"
                android:layout_height="match_parent"/>
    </LinearLayout>
    
    <LinearLayout
            android:id="@+id/sdfsaesdd"
            app:layout_constraintTop_toBottomOf="@+id/sdfsaed"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:background="@drawable/sp_bottom_border_05"
            android:layout_height="@dimen/item_layout_h">
        
        <ImageView
                android:src="@drawable/icon_ren"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="13dp"
                android:layout_width="27dp"
                android:layout_height="27dp"/>
        
        <EditText
                android:id="@+id/act_et_name"
                android:lines="1"
                app:layout_constraintTop_toTopOf="parent"
                android:textColorHint="@color/et_hint_color"
                android:layout_width="match_parent"
                android:background="@null"
                android:paddingLeft="28dp"
                android:hint="姓名"
                android:textSize="@dimen/et_text_size"
                android:layout_height="match_parent"/>
    </LinearLayout>
    
    <CheckBox
            android:id="@+id/renzheng_operator_agree"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sdfsaesdd"
            android:layout_width="wrap_content"
            android:text="  同意"
            android:button="@drawable/cb_button1"
            
            android:layout_marginLeft="25dp"
            android:paddingRight="11dp"
            android:textSize="19dp"
            android:textColor="#afafaf"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="19dp"/>
    
    <TextView
            android:id="@+id/xieyi"
            app:layout_constraintTop_toTopOf="@+id/renzheng_operator_agree"
            app:layout_constraintBottom_toBottomOf="@+id/renzheng_operator_agree"
            app:layout_constraintLeft_toRightOf="@+id/renzheng_operator_agree"
            android:text="《认证服务协议》"
            app:layout_constraintTop_toBottomOf="@+id/sdfsaesdd"
            android:textSize="19dp"
            android:textColor="#1a81e3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    
    <RelativeLayout
            app:layout_constraintTop_toBottomOf="@+id/renzheng_operator_agree"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:background="#f0f0f0"
            android:layout_marginTop="12dp"
            android:layout_height="0dp">
        
        <Button
                android:id="@+id/act_bt_login"
                android:textColor="@color/white"
                android:text="下一步"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="@dimen/bt_margin_window_side"
                android:layout_marginRight="@dimen/bt_margin_window_side"
                android:background="@drawable/sp_bt_bg_gray_c"
                android:textSize="@dimen/bt_text_size"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_h"/>
        
        <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            
            <ImageView
                    android:src="@drawable/anquanbaomi"
                    android:layout_width="20dp"
                    android:layout_height="24dp"/>
            
            <TextView
                    android:text="信息安全保护中.."
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>