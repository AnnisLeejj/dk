<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.annis.dk.ui.authentication.alipay.AuthAlipayActivity">
    
    <EditText
            android:id="@+id/act_et_tel"
            android:lines="1"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toTopOf="parent"
            android:textColorHint="@color/et_hint_color"
            android:layout_width="match_parent"
            android:background="@null"
            android:paddingLeft="@dimen/margin_window"
            android:hint="支付宝账号"
            android:textSize="@dimen/et_text_size"
            android:layout_height="@dimen/item_layout_h"/>
    
    <View
            android:id="@+id/act_tel_line"
            app:layout_constraintTop_toBottomOf="@+id/act_et_tel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="#d7d7d7"/>
    
    <EditText
            android:id="@+id/act_et_tel_psw"
            android:lines="1"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@+id/act_tel_line"
            android:textColorHint="@color/et_hint_color"
            android:layout_width="match_parent"
            android:background="@null"
            android:paddingLeft="@dimen/margin_window"
            android:hint="支付宝密码"
            android:textSize="@dimen/et_text_size"
            android:layout_height="@dimen/item_layout_h"/>
    
    <View
            android:id="@+id/act_et_tel_psw_line"
            app:layout_constraintTop_toBottomOf="@+id/act_et_tel_psw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="#d7d7d7"/>
    
    <TextView
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="上传截图"
            android:textSize="@dimen/bt_text_size"
            app:layout_constraintTop_toBottomOf="@+id/act_et_tel_psw_line"
            android:layout_marginLeft="@dimen/margin_window"
            android:layout_width="wrap_content"
            android:textColor="@color/text_color_black"
            android:layout_height="wrap_content"/>
    
    <ImageView
            android:id="@+id/auth_alipay_img"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/act_et_tel_psw_line"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/upload_button"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="255dp"
            android:layout_height="182dp"/>
    <!--android:layout_width="152dp"-->
    <!--android:layout_height="152dp"-->
    <TextView
            android:id="@+id/auth_alipay_img_hint"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="上传芝麻信用页面截图"
            android:textSize="@dimen/bt_text_size"
            app:layout_constraintTop_toBottomOf="@+id/auth_alipay_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    
    <ImageView
            android:src="@drawable/my_credit"
            android:layout_marginTop="35dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/auth_alipay_img_hint"
            android:layout_width="346dp"
            android:layout_height="245dp"/>
    <!--卡片实际大小-->
    <!--android:layout_width="381dp"-->
    <!--android:layout_height="250dp"/-->
    <!--762 × 547-->
    
    <Button
            android:id="@+id/act_bt_commit"
            android:textColor="@color/white"
            android:text="提 交"
            android:layout_marginTop="87dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/act_code_line"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="@dimen/bt_margin_window_side"
            android:layout_marginRight="@dimen/bt_margin_window_side"
            android:background="@drawable/sp_bt_bg_primary_c"
            android:textSize="@dimen/bt_text_size"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_h"/>
</androidx.constraintlayout.widget.ConstraintLayout>
