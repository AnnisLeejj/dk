<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.annis.dk.ui.emergency_contact.EmergencyContactActivity">
    
    <ScrollView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/act_bt_change"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            
            <TextView
                    android:text="紧急联系人1∶ "
                    android:background="#f4f4f4"
                    android:textSize="34px"
                    android:textColor="@color/text_color_black"
                    android:paddingLeft="@dimen/text_size_normal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="90px"/>
            
            <EditText
                    android:id="@+id/contact_1_name"
                    android:hint="姓名"
                    android:background="@drawable/shape_bottom_line"
                    android:textSize="@dimen/et_text_size"
                    android:paddingLeft="@dimen/margin_window"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_layout_h"/>
            
            <EditText
                    android:id="@+id/contact_1_relation"
                    android:hint="关系"
                    android:background="@drawable/shape_bottom_line"
                    android:textSize="@dimen/et_text_size"
                    android:paddingLeft="@dimen/margin_window"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_layout_h"/>
            
            <EditText
                    android:id="@+id/contact_1_mobel"
                    android:hint="电话号码"
                    android:background="@drawable/shape_bottom_line"
                    android:textSize="@dimen/et_text_size"
                    android:paddingLeft="@dimen/margin_window"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_layout_h"/>
            
            <TextView
                    android:text="紧急联系人2∶ "
                    android:paddingLeft="@dimen/text_size_normal"
                    android:background="#f4f4f4"
                    android:textSize="34px"
                    android:textColor="@color/text_color_black"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="90px"/>
            
            <EditText
                    android:id="@+id/contact_2_name"
                    android:hint="姓名"
                    android:background="@drawable/shape_bottom_line"
                    android:textSize="@dimen/et_text_size"
                    android:paddingLeft="@dimen/margin_window"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_layout_h"/>
            
            <EditText
                    android:id="@+id/contact_2_relation"
                    android:hint="关系"
                    android:background="@drawable/shape_bottom_line"
                    android:textSize="@dimen/et_text_size"
                    android:paddingLeft="@dimen/margin_window"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_layout_h"/>
            
            <EditText
                    android:id="@+id/contact_2_mobel"
                    android:hint="电话号码"
                    android:background="@drawable/shape_bottom_line"
                    android:textSize="@dimen/et_text_size"
                    android:paddingLeft="@dimen/margin_window"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_layout_h"/>
            
            <TextView
                    android:textColor="@color/text_color_black"
                    android:text="紧急联系人3∶ "
                    android:textSize="34px"
                    android:background="#f4f4f4"
                    android:paddingLeft="@dimen/text_size_normal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="90px"/>
            
            <EditText
                    android:id="@+id/contact_3_name"
                    android:hint="姓名"
                    android:background="@drawable/shape_bottom_line"
                    android:textSize="@dimen/et_text_size"
                    android:paddingLeft="@dimen/margin_window"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_layout_h"/>
            
            <EditText
                    android:id="@+id/contact_3_relation"
                    android:hint="关系"
                    android:background="@drawable/shape_bottom_line"
                    android:textSize="@dimen/et_text_size"
                    android:paddingLeft="@dimen/margin_window"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_layout_h"/>
            
            <EditText
                    android:id="@+id/contact_3_mobel"
                    android:hint="电话号码"
                    android:background="@drawable/shape_bottom_line"
                    android:textSize="@dimen/et_text_size"
                    android:paddingLeft="@dimen/margin_window"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_layout_h"/>
        </LinearLayout>
    </ScrollView>
    
    <Button
            android:id="@+id/act_bt_change"
            android:textColor="@color/white"
            android:layout_marginTop="88px"
            android:text="提 交"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:background="@drawable/sp_bt_bg_primary_c"
            android:textSize="@dimen/bt_text_size"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/bt_margin_window_bottom"
            android:layout_height="@dimen/button_h"/>
</androidx.constraintlayout.widget.ConstraintLayout>