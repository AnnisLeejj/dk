<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.annis.dk.ui.mine.bankmanage.BankManageActivity">
    
    <RelativeLayout
            android:id="@+id/info_container"
            android:layout_margin="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:background="@drawable/mycard"
            android:layout_height="270dp">
        
        <TextView
                android:id="@+id/tv_card_name"
                android:text="李爱国"
                android:layout_marginLeft="@dimen/margin_window"
                android:textSize="37dp"
                android:textColor="#ffffff"
                android:layout_marginTop="85dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        
        <TextView
                android:id="@+id/tv_card_account_hint"
                android:layout_below="@+id/tv_card_name"
                android:text="储蓄卡号"
                android:layout_marginLeft="@dimen/margin_window"
                android:textSize="21dp"
                android:textColor="#ffffff"
                android:layout_marginTop="33dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        
        <TextView
                android:id="@+id/tv_card_account"
                android:layout_below="@+id/tv_card_account_hint"
                android:text="4367 3124 1234 1251"
                android:layout_marginLeft="@dimen/margin_window"
                android:textSize="@dimen/title_text_size"
                android:textColor="#ffffff"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
    
    <Button
            android:id="@+id/act_bt_change"
            android:textColor="@color/white"
            android:layout_marginTop="44dp"
            android:text="更换卡片"
            app:layout_constraintTop_toBottomOf="@+id/info_container"
            android:layout_marginLeft="@dimen/bt_margin_window_side"
            android:layout_marginRight="@dimen/bt_margin_window_side"
            android:background="@drawable/sp_bt_bg_primary_c"
            android:textSize="@dimen/bt_text_size"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_h"/>
</androidx.constraintlayout.widget.ConstraintLayout>
