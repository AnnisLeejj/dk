<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0f0f0"
        tools:context="com.annis.dk.ui.authentication.operator.ReadBackActivity">
    
    <LinearLayout
            android:id="@+id/infoconteainer"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#ffffff"
            android:gravity="center_horizontal"
            android:paddingBottom="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        
        
        <ImageView
                android:id="@+id/asfasdf"
                android:src="@drawable/jiekuanchenggong"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="48dp"
                android:layout_width="86dp"
                android:layout_height="86dp"/>
        
        <TextView
                android:id="@+id/sdfeews"
                android:textSize="@dimen/bt_text_size"
                app:layout_constraintTop_toBottomOf="@+id/asfasdf"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="#1a81e3"
                android:layout_marginTop="13dp"
                android:text="提交成功"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        
        <TextView
                app:layout_constraintTop_toBottomOf="@+id/sdfeews"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="#858585"
                android:layout_marginTop="8.5dp"
                android:textSize="17dp"
                android:text="您所输入的内容已提交成功"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    
    <Button
            android:id="@+id/act_read_back_sure"
            android:background="@drawable/sp_bt_bg_sure"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/infoconteainer"
            android:layout_marginLeft="@dimen/margin_window"
            android:layout_marginRight="@dimen/margin_window"
            android:textSize="@dimen/bt_text_size"
            android:textColor="#ffffff"
            android:text="完 成"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_h"/>
    
    <LinearLayout
            
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        
        <ImageView
                android:src="@drawable/anquanbaomi"
                android:layout_width="20dp"
                android:layout_height="24dp"/>
        
        <TextView
                android:text="信息安全保护中.."
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
